{
  "name": "@web3-storage/sigv4",
  "version": "1.0.1",
  "description": "",
  "license": "Apache-2.0 OR MIT",
  "type": "module",
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": "web3-storage/sigv4",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "npm run build:api_docs && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir ./dist",
    "build:api_docs": "jsdoc2md > API.md",
    "pretest": "npm run prettier && npm run typecheck",
    "test": "vitest run signer",
    "test:uploads": "vitest run actual-uploads",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier -c '{src,test}/**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "prettier:fix": "prettier -w '{src,test}/**/*.{js,ts,yml,json}' --ignore-path .gitignore",
    "test:coverage": "vitest run --coverage",
    "test:dev": "vitest --coverage"
  },
  "dependencies": {
    "@noble/hashes": "^1.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@vitest/coverage-c8": "^0.23.2",
    "@web-std/fetch": "^4.0.0",
    "dotenv": "^16.0.0",
    "jsdoc-to-markdown": "^7.1.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "typescript": "^4.8.3",
    "vitest": "^0.25.2"
  },
  "jsdoc2md": {
    "files": [
      "src/**/*.js"
    ]
  }
}
